apiVersion: batch/v1
kind: CronJob
metadata:
  name: edgedelta-updater
  namespace: edgedelta
spec:
  schedule: "*/5 * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: edgedelta-updater-container
            image: {IMAGE_URI}
            env:
            - name: ED_API_URL
              value: {ED_API_URL}
            - name: ED_LATEST_TAG_ENDPOINT
              value: {ED_LATEST_TAG_ENDPOINT}
            imagePullPolicy: Always
            command:
            - /ko-app/updater
            - --config
            - /var/run/ko/config.yml
          restartPolicy: Never